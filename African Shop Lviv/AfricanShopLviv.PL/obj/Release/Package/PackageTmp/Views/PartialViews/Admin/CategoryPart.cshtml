
@{
    var listCategtories = ViewBag.Categories as List<AfricanShopLviv.BLL.DTO.CategoryDto>;

    if (listCategtories.Count == 0 || listCategtories == null)
    {
        <h3 style="color:red;font-family:'Palatino Linotype';text-align:center">
            List of Categories are Empty...
        </h3>
    }
    else
    {
        using (Html.BeginForm())
        {
            <div>
                <button style="" name="btn-AddCategory" type="submit"
                        class="btn btn-warning">
                    Add New Category
                </button>
            </div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr style="text-align:center">
                        <th scope="col">#</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in listCategtories)
                    {
                        string photo = "~/Images/Categories/" + c.Photo;
                        <tr style="text-align:center">
                            <th scope="row">@c.Id</th>
                            <th scope="row">
                                <img width="40" height="40" src="@Url.Content(photo)" />
                            </th>
                            <td>@c.Name</td>
                            <td>
                                <div style="width:200px">
                                    <button type="submit" name="btn-EditCateg-@c.Id" class="btn btn-warning" style="background-color:yellow;">Edit</button>
                                    <button type="submit" name="btn-DetailsCateg-@c.Id" style="" class="btn btn-success">Details</button>
                                    <button type="submit" name="btn-DeleteCateg-@c.Id" style="" class="btn btn-danger">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            }
        }
    }

