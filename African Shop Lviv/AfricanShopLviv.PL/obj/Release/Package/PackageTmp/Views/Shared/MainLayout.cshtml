<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AFRICAN SHOP</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/prodList.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/your-path-to-fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/brands.css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/solid.css" rel="stylesheet">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="apple-touch-icon" type="image/png" sizes="57x57" href="~/favicon-57x57.png">
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="col-md-pull-2" @*style="background-image: linear-gradient(transparent, yellow, red, transparent)"*@>
        <header>
            @if (ViewBag.IsOrder == true)
            {
                <div id="cartFixed" class="">
                    <a href="~/Home/MainPage?isShopCart=cart" style="">
                        <img src="~/Logo/cart.png" width="60" height="60" />
                    </a>
                </div>
            }
            else { }
            <nav class="navbar navbar-expand-lg navbar-light bg-inverse-info" style="background-image: linear-gradient( #994C00, brown,#994C00); border: 2px solid #994C00; border-radius: 0px; padding: 9px ">
                <div class="container-fluid" style="">
                    @Html.ActionLink("AfricanShopLviv", "MainPage", "Home", new { area = "" }, new { @class = "navbar-brand", id = "hompg" })
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav">
                            &nbsp;                        &nbsp;                        &nbsp;                        &nbsp;                        &nbsp;                &nbsp;
                            @Html.ActionLink("Contacts", "MainPage", "Home", new { param = "Contacts" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Delivery", "MainPage", "Home", new { param = "Delivery" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Payments", "MainPage", "Home", new { param = "Payments" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Videos", "MainPage", "Home", new { param = "Videos" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Cart", "MainPage", "Home", new { isShopCart = "cart" }, new { id = "btn", @class = "nav-item nav-link" })
                        </div>
                        <div class="navbar-nav ms-auto">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </nav>

        </header>
    </div>

    <div class="container body-content" style="background-image: linear-gradient(transparent, tomato, transparent, darkorange, transparent)">
        @RenderBody()
        <br /><br /><br />
        <hr />
        <!--<footer>
        <div style="margin:auto;width:470px">-->
        @*style="text-align:center;font-weight:bold;border-radius:22px;background-image:linear-gradient(tomato,lightyellow,lightgreen);padding:9px"*@
        <!--<h4 style="text-align:center;border-radius:12px;padding:6px;color:gold; background-color:black"> &copy; @DateTime.Now.Year - African Shop. Lychakivska 31 str., Lviv, Ua</h4>
            </div>
        </footer>-->

    </div>
    <!-- Footer -->
    <footer class="text-center  text-white"
            style="background-color: black;opacity:0.5">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Links -->
            <section class="">
                <!--Grid row-->
                <div class="row">

                </div>
                <!--Grid row-->
            </section>
            <!-- Section: Links -->

            <hr class="mb-4" />

            <!-- Section: CTA -->
            <section class="">
                <p class="d-flex justify-content-center align-items-center">
                    <span class="me-3" style="">Register for free</span>
                    @Html.ActionLink("Sign up!", "Register", "Account", null, new { @class = "btn btn-outline-light btn-rounded" })
                </p>
            </section>
            <!-- Section: CTA -->

            <hr class="mb-4" />

            <!-- Section: Social media -->
            <section class="mb-4 text-center">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="http://www.facebook.com/African-Shop-LVIV-UA-641011469316068/timeline/"
                   target="_blank"
                   role="button">
                    <i class="fab fa-facebook-f"></i>
                </a>

                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="#!"
                   role="button">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="mailto:africanshoplviv@gmail.com" target="_blank"
                   role="button">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://instagram.com/p/90rOPNoOw_/" target="_blank"
                   role="button">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://wa.me/0634392871" target="_blank"
                   role="button">
                    <i class="fab fa-whatsapp"></i>
                </a>

                <!-- Github -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="viber://public?id=0634392871" target="_blank"
                   role="button">
                    <i class="fab fa-viber"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3"
             style="background-color: rgba(0, 0, 0, 0.2)">
            @*© 2020 Copyright:*@
            <a class="text-white" href="#">&copy; @DateTime.Now.Year - African Shop Lviv / AfroMarket Ternopil. Best Buy Online </a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

    @Scripts.Render("~/bundles/jquery")
    @*   @Scripts.Render("~/bundles/bootstrap"))*@
    @RenderSection("scripts", required: false)
</body>
        </html>

        <style>
            #cartFixed {
                position: fixed;
                z-index: 100;
                border: 0.4px solid white;
                border-radius: 55px;
                background-color: white;
                padding: 15px;
                float:right;
                /*margin: 80px 0 0 0;*/
            }
                #cartFixed:hover {
                    background-image: linear-gradient(transparent, yellow, black, yellow);
                    border: 0.4px solid yellow;
                }
            .btn-group button {
                background-color: #04AA6D; /* Green background */
                border: 1px solid green; /* Green border */
                color: white; /* White text */
                padding: 10px 24px; /* Some padding */
                cursor: pointer; /* Pointer/hand icon */
                width: 50%; /* Set a width if needed */
                display: block; /* Make the buttons appear below each other */
            }

                .btn-group button:not(:last-child) {
                    border-bottom: none; /* Prevent double borders */
                }
                /* Add a background color on hover */
                .btn-group button:hover {
                    background-color: #3e8e41;
                }
            body {
                background: url(../../Images/img/backgroundImg.png) no-repeat center center fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
            }
            html {
                height: 100%;
                /*background-image: linear-gradient(to right top, #8e44ad 0%, #3498db 100%);*/

            }

            nav {
                max-width: 1200px;
                mask-image: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, #ffffff 25%, #ffffff 75%, rgba(255, 255, 255, 0) 100%);
                margin: 0 auto;
                padding: 60px 0;
            }

                nav ul {
                    text-align: center;
                    background: linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.2) 25%, rgba(255, 255, 255, 0.2) 75%, rgba(255, 255, 255, 0) 100%);
                    box-shadow: 0 0 25px rgba(0, 0, 0, 0.1), inset 0 0 1px rgba(255, 255, 255, 0.6);
                }

            #hompg {
                border-radius: 9px;
                border: 0.1px solid transparent;
                padding: 9px;
                font-weight: bold;
                font-family: Palatino Linotype;
                color:gold;
                font-size:x-large;
            }

                #hompg:hover {
                    border-radius: 9px;
                    color: white;
                    padding: 9px;
                    background-color: #8e44ad;
                    border: 0.1px solid #8e44ad;
                    background-image: linear-gradient(violet, blue);
                }

                #hompg:active {
                    border-radius: 9px;
                    border: 0.1px solid gold;
                    background-color: gold;
                    color: black;
                }

            #btn {
                border: 0.1px solid transparent;
                border-radius: 9px;
                font-family: Palatino Linotype;
                font-weight: bold;
                color:white;
            }

                #btn:hover {
                    color: white;
                    border: 0.1px solid yellow;
                    background-color: #3498db;
                    border-radius: 9px;
                    background-image: linear-gradient(red, yellow);
                }

                #btn:active {
                    color: white;
                    border: 0.1px solid gold;
                    background-color: gold;
                    border-radius: 9px;
                }
        </style>
