<body>
    <div class="col-md-pull-2" @*style="background-image: linear-gradient(transparent, yellow, red, transparent)"*@>
        <header>
            @if (ViewBag.IsOrder == true)
            {
                <div style="">

                    <div id="cartFixed" style="margin-left: 7px" class="">
                        @if (@AfricanShopLviv.PL.Controllers.HomeController.CntAdd != 0)
                        {
                            <div style="position: fixed; padding: 3px;font-weight:bold; border: thin solid yellow; background-color: yellow; border-radius: 55px ">
                                <span style="color: darkred">
                                    @AfricanShopLviv.PL.Controllers.HomeController.CntAdd
                                </span>
                            </div>
                        }
                        <a href="~/Home/MainPage?isShopCart=cart" style="">
                            <img src="~/Logo/cart.png" width="60" height="60" />
                        </a>
                    </div>
                </div>
            }
            else { }
            <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-inverse-info" 
                 style="background-image: linear-gradient( #994C00, brown,#994C00); 
border: 2px solid #994C00; border-radius: 0px; padding: 9px ">
                <div class="container-fluid" style="">
                    @Html.ActionLink("AfricanShopLviv", "MainPage", "Home", new { area = "" }, new { @class = "navbar-brand", id = "hompg" })
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav">
                            &nbsp;                        &nbsp;                        &nbsp;                        &nbsp;                        &nbsp;                &nbsp;
                            @Html.ActionLink("Contacts", "MainPage", "Home", new { param = "Contacts" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Delivery", "MainPage", "Home", new { param = "Delivery" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Payments", "MainPage", "Home", new { param = "Payments" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Videos", "MainPage", "Home", new { param = "Videos" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Cart", "MainPage", "Home", new { isShopCart = "cart" }, new { id = "btn", @class = "nav-item nav-link" })
                        </div>
